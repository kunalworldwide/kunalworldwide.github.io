---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

let projects: Array<{
  id: string;
  title: string;
  description: string;
  date: Date;
  categories: string[];
  techStack: string[];
  github?: string;
  demo?: string;
  image?: string;
}> = [];

try {
  const allProjects = await getCollection('projects');
  projects = allProjects
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
    .map((project) => ({
      id: project.id,
      title: project.data.title,
      description: project.data.description,
      date: project.data.date,
      categories: project.data.categories,
      techStack: project.data.techStack,
      github: project.data.github,
      demo: project.data.demo,
      image: project.data.image,
    }));
} catch {
  // Collection not yet populated
}
---

<BaseLayout title="Projects" description="Open-source projects and tools for cloud computing, DevOps automation, and developer tooling">
  <!-- Header -->
  <section class="pt-32 pb-12 px-4 sm:px-6 lg:px-8 animated-gradient text-white">
    <div class="max-w-7xl mx-auto text-center">
      <h1 class="text-4xl sm:text-5xl font-extrabold tracking-tight mb-4">
        Projects
      </h1>
      <p class="text-xl opacity-90 max-w-2xl mx-auto">
        Open-source tools and projects I've built for the cloud-native community
      </p>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      {projects.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {projects.map((project) => (
            <article class="group rounded-2xl bg-slate-800 border border-slate-700 overflow-hidden card-hover">
              {project.image && (
                <div class="aspect-video overflow-hidden">
                  <img
                    src={project.image}
                    alt={project.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                </div>
              )}
              <div class="p-6">
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.categories.slice(0, 3).map((cat) => (
                    <span class="px-3 py-1 bg-emerald-900/30 text-emerald-400 rounded-full text-xs font-medium">
                      {cat}
                    </span>
                  ))}
                </div>

                <h2 class="text-2xl font-bold mb-3 text-white group-hover:text-blue-400 transition-colors">
                  {project.title}
                </h2>

                <p class="text-slate-400 mb-4">
                  {project.description}
                </p>

                <div class="flex flex-wrap gap-2 mb-6">
                  {project.techStack.map((tech) => (
                    <span class="px-3 py-1 bg-slate-700 rounded-lg text-xs font-medium text-slate-300">
                      {tech}
                    </span>
                  ))}
                </div>

                <div class="flex gap-4">
                  {project.github && (
                    <a
                      href={project.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-2 px-4 py-2 bg-slate-700 text-white rounded-lg hover:bg-slate-600 transition-colors text-sm font-medium"
                    >
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
                      </svg>
                      GitHub
                    </a>
                  )}
                  {project.demo && (
                    <a
                      href={project.demo}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-2 px-4 py-2 gradient-bg text-white rounded-lg hover:opacity-90 transition-opacity text-sm font-medium"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                      Live Demo
                    </a>
                  )}
                </div>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-20">
          <div class="text-6xl mb-4">ðŸš€</div>
          <h2 class="text-2xl font-bold mb-2 text-white">No projects yet</h2>
          <p class="text-slate-400">
            Check back soon for new open-source projects!
          </p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
